<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post" class="text-white">
                <input class="block px-5 py-2 bg-zinc-800 w-full rounded-md" type="text" placeholder="Title"
                    name="title">
                <textarea class="block px-5 py-2 bg-zinc-800 my-2 w-full rounded-md" placeholder="Write your task"
                    name="description"></textarea>
                <input type="submit" value="Create Task">
            </form>
        </div>

        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if(files.length> 0){%>

                <% files.forEach((val)=>{%>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter">
                            <%= val%>
                        </h1>

                        <div class="flex items-center justify-between text-sm">
                            <a class="text-blue-500 inline-block mt-3" href="/files/<%= val %>">click to read</a>

                            <a class="text-gray-400 inline-block mt-3" href="/edit/<%= val %>">click to edit</a>
                        </div>
                    </div>
                    <% })%>
                        <% } else{%>
                            <p class="text-zinc-500">No tasks yet.</p>
                            <% }%>



        </div>
    </div>

    <script src="/javascript/script.js"></script>
</body>

</html>